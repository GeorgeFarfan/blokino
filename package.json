{
  "name": "blokino",
  "version": "1.0.0",
  "description": "Blokino - Web environment to program physical objects.",
  "main": "main.js",
  "repository": {
    "type": "git",
    "url": "https://github.com/georgefarfan/blokino"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run prettier-staged",
      "pre-push": "npm run test-ci && npm run build"
    }
  },
  "scripts": {
    "publish": "git push --tags && npm publish",
    "start": "electron .",
    "electron-rebuild": "electron-rebuild",
    "lint": "prettier --check .",
    "prettier-staged": "pretty-quick --staged ",
    "electron-create-installer": "electron-rebuild && build",
    "js-run-code": "node libs/johnnyFive/code/current-code.js",
    "electron-fix-dependencies": "yarn add electron-rebuild --dev && yarn add sharp && electron-rebuild"
  },
  "keywords": [
    "Blokino",
    "Electron",
    "JavaScript",
    "Johnny-Five"
  ],
  "author": "Jorge Farfan Coaguila<jorge.farfan1990@gmail.com>",
  "license": "MIT",
  "devDependencies": {
    "electron": "^4.2.12",
    "electron-builder": "^20.38.5",
    "electron-rebuild": "^2.2.0"
  },
  "dependencies": {
    "@webcomponents/webcomponentsjs": "^2.2.10",
    "avrgirl-arduino": "^4.2.3",
    "bootstrap": "^4.5.2",
    "chalk": "^2.4.2",
    "code-mirror-themes": "^1.0.0",
    "codemirror": "^5.57.0",
    "crypto-js": "^3.3.0",
    "esprima": "^4.0.1",
    "internet-available": "^1.0.0",
    "johnny-five": "^1.5.0",
    "js-beautify": "^1.13.0",
    "json-cycle": "^1.3.0",
    "macos-release": "^3.0.1",
    "moment": "^2.27.0",
    "node-pty": "^0.10.0-beta16",
    "oled-js": "^5.1.2",
    "husky": "^4.3.8",
    "os": "^0.1.1",
    "os-name": "^3.1.0",
    "rxjs": "^6.6.3",
    "serialport": "^9.0.1",
    "sharp": "^0.26.1",
    "prettier": "^2.3.2",
    "pretty-quick": "^3.1.1",
    "sudo-prompt": "^8.2.5",
    "xml-js": "^1.6.11"
  },
  "optionalDependencies": {
    "jquery": "^3.5.1",
    "popper.js": "^1.16.1"
  },
  "build": {
    "appId": "Blokino-v1.0",
    "asar": false,
    "linux": {
      "target": [
        "deb"
      ],
      "files": [
        "!resources/circuits/diagrams/*",
        "!resources/examples-code/*",
        "!resources/installers/*",
        "!resources/notes/*",
        "!resources/README.md"
      ]
    },
    "dmg": {
      "contents": [
        {
          "x": 110,
          "y": 150
        },
        {
          "x": 240,
          "y": 150,
          "type": "link",
          "path": "/Applications"
        }
      ]
    },
    "win": {
      "target": "NSIS",
      "icon": "src/images/logos/blokino.ico",
      "files": [
        "!resources/circuits/diagrams/*",
        "!resources/examples-code/*",
        "!resources/installers/*",
        "!resources/notes/*",
        "!resources/README.md"
      ]
    }
  }
}
