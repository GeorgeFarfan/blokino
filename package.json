{
    "name": "blokino",
    "version": "1.0.0",
    "description": "Blokino - Entorno web para programar objetos f√≠sicos.",
    "main": "main.js",
    "scripts": {
        "start": "electron .",
        "electron-rebuild": "electron-rebuild",
        "electron-create-installer": "electron-rebuild && build",
        "js-run-code": "node libs/johnnyFive/code/current-code.js",
        "electron-fix-dependencies": "yarn add electron-rebuild --dev && yarn add sharp && electron-rebuild"
    },
    "keywords": [
        "Electron",
        "Blokino",
        "Javascript",
        "Johnny-Five"
    ],
    "author": "Jorge Farfan Coaguila<jorge.farfan1990@gmail.com>",
    "license": "MIT",
    "devDependencies": {
        "electron": "^4.2.10",
        "electron-builder": "^20.38.5",
        "electron-rebuild": "^1.8.6"
    },
    "dependencies": {
        "@webcomponents/webcomponentsjs": "^2.2.10",
        "blockly": "^2.20190722.1",
        "bootstrap": "^4.3.1",
        "chalk": "^2.4.2",
        "code-mirror-themes": "^1.0.0",
        "codemirror": "^5.45.0",
        "crypto-js": "^3.1.9-1",
        "esprima": "^4.0.1",
        "firmata-party": "^1.5.10", 
        "internet-available": "^1.0.0",
        "johnny-five": "^1.3.1",
        "jquery": "^3.3.1",
        "js-beautify": "^1.8.9",
        "json-cycle": "^1.3.0",
        "moment": "^2.24.0",
        "oled-js": "^5.0.0",
        "os": "^0.1.1",
        "os-name": "^3.0.0",
        "popper.js": "^1.14.7",
        "rxjs": "^6.5.2",
        "serialport": "^7.1.4",
        "sharp": "^0.23.1",
        "sudo-prompt": "^8.2.5",
        "xml-js": "^1.6.11"
    },
    "build": {
        "appId": "Blokino-v1.0",
        "asar": false,
        "linux": {
            "target": [
                "deb"
            ]
        },
        "dmg": {
            "contents": [
                {
                    "x": 110,
                    "y": 150
                },
                {
                    "x": 240,
                    "y": 150,
                    "type": "link",
                    "path": "/Applications"
                }
            ]
        },
        "win": {
            "target": "NSIS",
            "icon": "installers/icons/icon.ico"
        }
    }
}
